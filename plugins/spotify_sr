@Client.on_message(filters.private | filters.group & filters.regex(r"https?://open.spotify.com[^\s]+"))
async def spotifyvx(bot, message):
    link = message.matches[0].group(0)
    m = await message.reply_text(
        f"**Gathering info from your [link]({link}).**"
